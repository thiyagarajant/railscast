<%= simple_form_for @episode, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :note %><br>
  Category<br>
  <%= f.select :category_id, category_list,:prompt => "Choose a Category" %>
  <%= f.input :picture %>
  <%= f.input :video %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                episodes_path, :class => 'btn' %>
  </div>
<% end %>
